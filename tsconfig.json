{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*",
    "src/**/*.astro",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    },
    "types": ["astro/client"],
    "allowJs": true,
    "strictNullChecks": true
  }
}
