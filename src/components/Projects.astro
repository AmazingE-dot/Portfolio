---
import "../styles/global.css";

const projects = [
  {
    id: 1,
    title: "Agente IA - Copilot Studio",
    description: "Sistema de inteligencia artificial que optimiza flujos de trabajo empresariales. Ganador de la 3ra Conferencia Internacional de IA.",
    technologies: ["Microsoft Copilot Studio", "Microsoft Graph", "PHP"],
    image: "",
    featured: true,
    githubUrl: "#",
    liveUrl: "#"
  },
  {
    id: 2,
    title: "Página web de admisiones",
    description: "Página web de matrículas para estudiantes nuevos y antiguos en los colegios Minuto de Dios a nivel internacional.",
    technologies: ["PHP", "JavaScript", "jQuery", "MySQL"],
    image: "/Projects/PortafolioAdmisiones.jpg",
    featured: false,
    githubUrl: "#",
    liveUrl: "#"
  },
  {
    id: 3,
    title: "Aplicación de inventario y facturación",
    description: "Aplicación moderna desarrollada con React, TanStack, Firebase y TailwindCSS. Incluye autenticación y base de datos en tiempo real.",
    technologies: ["React", "TanStack", "Firebase", "TailwindCSS"],
    image: "",
    featured: false,
    githubUrl: "#",
    liveUrl: "#"
  },
];
---
<!-- ESTO VAN EN LAS image  -->
<!-- /api/placeholder/400/250  -->
<section id="proyectos" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Mis <span class="gradient-text">Proyectos</span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Una selección de mis trabajos más destacados en desarrollo web e inteligencia artificial
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class={`bg-white dark:bg-gray-900 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2; ${project.featured ? 'ring-2 ring-yellow-400 lg:col-span-2 xl:col-span-1;' : ''}`}>
          <div class="relative overflow-hidden rounded-t-xl">
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-48 object-cover transition-transform duration-300 hover:scale-105"
            />
            {project.featured && (
              <div class="absolute top-4 left-4">
                <span class="bg-yellow-500 text-white px-3 py-1 rounded-full text-sm font-medium flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  Destacado
                </span>
              </div>
            )}
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
              {project.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-4">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-6">
              {project.technologies.map((tech) => (
                <span class="px-2 py-1 bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 rounded text-xs font-medium">
                  {tech}
                </span>
              ))}
            </div>
            
            <div class="flex space-x-4">
              <a 
                href={project.githubUrl} 
                class="flex items-center text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Código
              </a>
              <a 
                href={project.liveUrl} 
                class="flex items-center text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                Ver Demo
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="#contacto" class="inline-flex items-center px-8 py-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-lg shadow-lg hover:from-primary-600 hover:to-primary-700 transform hover:scale-105 transition-all duration-200;">
        Ver Más Proyectos
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
    </div>
  </div>
</section>
