---
import "../styles/global.css";

const projects = [
  {
    id: 1,
    titleKey: "project-1-title",
    descriptionKey: "project-1-description",
    defaultTitle: "Agente IA - Copilot Studio",
    defaultDescription: "Agente de inteligencia artificial que optimiza flujos de trabajo empresariales. Ganador de la II Conferencia Internacional de IA Minuto de Dios.",
    technologies: ["Microsoft Copilot Studio", "Microsoft Graph", "PHP"],
    image: "/Projects/AvartarArquimedes.webp",
    featured: true,
    githubUrl: "#",
    liveUrl: "#",
  },
  {
    id: 2,
    titleKey: "project-2-title",
    descriptionKey: "project-2-description",
    defaultTitle: "Página web de admisiones",
    defaultDescription: "Página web de matrículas para estudiantes nuevos y antiguos en los colegios Minuto de Dios a nivel internacional.",
    technologies: ["PHP", "JavaScript", "jQuery", "MySQL"],
    image: "/Projects/PortafolioAdmisiones.webp",
    featured: false,
    githubUrl: "#",
    liveUrl: "#",
  },
  {
    id: 3,
    titleKey: "project-3-title",
    descriptionKey: "project-3-description",
    defaultTitle: "Aplicación de inventario y facturación",
    defaultDescription: "Aplicación moderna desarrollada con React, TanStack, Firebase y TailwindCSS. Incluye autenticación y base de datos en tiempo real.",
    technologies: ["React", "TanStack", "Firebase", "TailwindCSS"],
    image: "/Projects/FacturaciónInventario.webp",
    featured: false,
    githubUrl: "#",
    liveUrl: "#",
  },
];
---

<section id="proyectos" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        <span data-i18n="projects-title"></span> <span class="gradient-text" data-i18n="projects-title2"></span>
      </h2>
      <!-- <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto" data-i18n="projects-subtitle">
        Una selección de mis trabajos más destacados en desarrollo web e inteligencia artificial
      </p> -->
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class={`project-card bg-white dark:bg-gray-900 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2; ${project.featured ? "ring-2 ring-yellow-400 lg:col-span-2 xl:col-span-1;" : ""}`}>
          <div class="relative overflow-hidden rounded-t-xl">
            <img
              src={project.image}
              alt={project.defaultTitle}
              class={
                project.image === "/Projects/AvartarArquimedes.webp"
                  ? "w-[200px] h-[200px] object-contain mx-auto block py-8 transition-transform duration-300 hover:scale-105"
                  : "w-full h-48 object-cover transition-transform duration-300 hover:scale-105"
              }
            />
            {project.featured && (
              <div class="absolute top-4 left-4">
                <span class="featured-badge">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span data-i18n="projects-featured-badge">Destacado</span>
                </span>
              </div>
            )}
            {project.featured && (
              <div class="absolute top-4 right-4">
                <div class="award-badge">
                  <span class="text-xl">🏆</span>
                </div>
              </div>
            )}
          </div>

          <div class="p-6">
            {project.featured && (
              <div class="award-label mb-3">
                <span data-i18n="projects-award-label">AGENTE GANADOR</span>
              </div>
            )}
            
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3" data-i18n={project.titleKey}>
              {project.defaultTitle}
            </h3>
            
            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-4" data-i18n={project.descriptionKey}>
              {project.defaultDescription}
            </p>

            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map((tech) => (
                <span class={`tech-badge ${project.featured ? 'featured-tech' : ''}`}>
                  {tech}
                </span>
              ))}
            </div>

            {project.featured && (
              <div class="achievement-highlight">
                <p class="text-sm text-gray-600 dark:text-gray-400 font-medium" data-i18n="projects-achievement-note"></p>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <!-- <a href="#contacto" class="cta-button">
        <span data-i18n="projects-cta-button">Ver Más Proyectos</span>
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a> -->
    </div>
  </div>
</section>
